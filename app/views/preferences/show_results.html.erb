<html>

<head>
	<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<style>

	th{
		text-align: center;
	}

	.jumbotron{
		text-align: center;
		height: 50px;
		background-color: #16a085;
		color: white;
	}


</style>


</head>

<body>

	<%=@hash%>

	<%if @locations != []%>
		

		<div class="jumbotron">
		 	<p>Here's what we found</p>
		</div>

		<%=@hash%>


		<table class="table table-striped table-hover table-bordered" style="width:95%" align="center">
			<tr>
				<th>Title</th>
				<th>Yelp Rating</th>
				<th>City</th>
				<th>Description</th>
				<th>Drive Time</th>

			</tr>


			<%@locations.each do |location|%>


				<tr>
					<td><a href=<%=location.url%>> <%=location.title%></a></td>
					<td><%=location.yelp_rating%></td>
					<td><%=location.city%></td>
					<td><%=location.description%></td>
					<td><%=location.duration%></td>

				</tr>

			<%end%>


		</table>
	<%else%>
		<div class="jumbotron">
		  <div class="container">
		    <p>Select at least one interest</p>
		  </div>
		</div>

		<form action="https://ideal-trip-2016.herokuapp.com/">
			<button type="submit" class="btn btn-primary btn-lg btn-block" style="width:75%; margin:auto">Go Back</button>
		</form>

	<%end%>
</body>

</html>
