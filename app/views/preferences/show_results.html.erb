<html>

<head>
	<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<style>

	th{
		text-align: center;
	}


</style>


</head>

<body>

	<%if @locations != []%>
		<p>Here's what we found</p>


		<table class="table table-striped table-hover" style="width:95%" align="center">
			<tr>
				<th>Title</th>
				<th>Yelp Rating</th>
				<th>City</th>
				<th>Description</th>
			</tr>


			<%@locations.each do |location|%>


				<tr>
					<td><a href=<%=location.url%>> <%=location.title%></a></td>
					<td><%=location.yelp_rating%></td>
					<td><%=location.city%></td>
					<td><%=location.description%></td>
				</tr>

			<%end%>


		</table>
	<%else%>
		<p>Select at least one interest!</p>
	<%end%>
</body>

</html>
